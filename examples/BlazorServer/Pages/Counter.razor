@page "/counter"
@using Zapto.Mediator
@using BlazorServer.Commands
@implements IDisposable
@inject IMediator Mediator

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Increment for everyone</button>

@code {

    private int currentCount = 0;
    private IDisposable? _dispose;

    // Register the page to receive notifications
    protected override void OnInitialized()
    {
        _dispose = Mediator.RegisterNotificationHandler(this, InvokeAsync);
    }

    public void Dispose()
    {
        _dispose?.Dispose();
    }

    // Send the notification
    private async Task IncrementCount()
    {
        await Mediator.IncrementCountAsync();
    }

    // Receive the notification
    [NotificationHandler]
    public void HandleNotification(IncrementCountNotification notification)
    {
        currentCount++;
        StateHasChanged();
    }

}
